{-| -}
toCardinalForm :
    Float
    -> FloatInfo
    -> PluralForm
toCardinalForm _ floatInfo =
    if floatInfo.absoluteValue == 1 then
        One
    else
        Other


{-| -}
toOrdinalForm :
    Float
    -> FloatInfo
    -> PluralForm
toOrdinalForm _ floatInfo =
    if
        ((Plural.integerDigits floatInfo % 10 == 1)
            || (Plural.integerDigits floatInfo % 10 == 2)
            || (Plural.integerDigits floatInfo % 10 == 5)
            || (Plural.integerDigits floatInfo % 10 == 7)
            || (Plural.integerDigits floatInfo % 10 == 8)
        )
            || ((Plural.integerDigits floatInfo % 100 == 20)
                    || (Plural.integerDigits floatInfo % 100 == 50)
                    || (Plural.integerDigits floatInfo % 100 == 70)
                    || (Plural.integerDigits floatInfo % 100 == 80)
               )
    then
        One
    else if
        ((Plural.integerDigits floatInfo % 10 == 3)
            || (Plural.integerDigits floatInfo % 10 == 4)
        )
            || ((Plural.integerDigits floatInfo % 1000 == 100)
                    || (Plural.integerDigits floatInfo % 1000 == 200)
                    || (Plural.integerDigits floatInfo % 1000 == 300)
                    || (Plural.integerDigits floatInfo % 1000 == 400)
                    || (Plural.integerDigits floatInfo % 1000 == 500)
                    || (Plural.integerDigits floatInfo % 1000 == 600)
                    || (Plural.integerDigits floatInfo % 1000 == 700)
                    || (Plural.integerDigits floatInfo % 1000 == 800)
                    || (Plural.integerDigits floatInfo % 1000 == 900)
               )
    then
        Few
    else if
        (Plural.integerDigits floatInfo == 0)
            || ((Plural.integerDigits floatInfo % 10 == 6)
                    || ((Plural.integerDigits floatInfo % 100 == 40)
                            || (Plural.integerDigits floatInfo % 100 == 60)
                            || (Plural.integerDigits floatInfo % 100 == 90)
                       )
               )
    then
        Many
    else
        Other


{-| -}
cardinal :
    (args -> Float)
    -> FloatPrinter args msg
    -> List ( Float, Text Static args msg )
    ->
        { one : Text Static args msg
        , other : Text Static args msg
        }
    -> Text Static args msg
cardinal accessor printer otherTexts { one, other } =
    plural accessor
        printer
        toCardinalForm
        otherTexts
        { zero = Nothing
        , one = Just one
        , two = Nothing
        , few = Nothing
        , many = Nothing
        , other = other
        }


{-| -}
ordinal :
    (args -> Float)
